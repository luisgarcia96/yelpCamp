<% layout('/layouts/boilerplate.ejs') %> 
    <h1><%= campground.title %></h1>
    <h2><%= campground.location %></h2>
    <img src="<%= campground.image %>" alt="">
    <h3><%= campground.description %></h3>
    <h4>Price: $<%= campground.price %></h4>
    <section>
        <a href="/campgrounds/<%= campground._id %>/edit">Edit this campground</a>
        <a href="/campgrounds">Back to Campgrounds</a>
        <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
            <button>Delete this Campground</button>
        </form>
    </section>
